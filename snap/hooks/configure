#!/bin/sh -e

# Set imv wait time before showing next picture via snap config

DEFAULT_IMV_DURATION=10
imv_duration="$(snapctl get imv-duration)"

if ! expr "$imv_duration" : '^[0-9]*$' > /dev/null; then
    echo "\"$imv_duration\" is not a valid duration, reveting to $DEFAULT_IMV_DURATION seconds" >&2
    snapctl set imv_duration="$DEFAULT_IMV_DURATION"
    snapctl restart "$SNAP_NAME".imv
fi

# (Re)authenticate B2 with keys from the snap config

APPLICATION_KEY_ID="$(snapctl get b2-application-key-id)"
APPLICATION_KEY="$(snapctl get b2-application-key)"
AUTH_FILE="$SNAP_USER_COMMON/b2_account_info" # default is ~/.b2_account_info, see sync.wrapper

if [ -n "${APPLICATION_KEY_ID}" ] && [ -n "${APPLICATION_KEY}" ]; then
  B2_ACCOUNT_INFO=$AUTH_FILE $SNAP/usr/bin/python3 $SNAP/bin/b2 clear-account
  B2_ACCOUNT_INFO=$AUTH_FILE $SNAP/usr/bin/python3 $SNAP/bin/b2 authorize-account $APPLICATION_KEY_ID $APPLICATION_KEY
fi
